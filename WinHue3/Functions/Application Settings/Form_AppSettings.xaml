<Window
 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
    x:Class="WinHue3.Functions.Application_Settings.Form_AppSettings"
        xmlns:resx="clr-namespace:WinHue3.Resources"
    xmlns:controls="clr-namespace:WinHue3.Controls"
    xmlns:converters="clr-namespace:WinHue3.Functions.Converters"
    xmlns:applicationSettings="clr-namespace:WinHue3.Functions.Application_Settings"
    xmlns:models="clr-namespace:WinHue3.MainForm"
    Title="{x:Static resx:GUI.SettingsForm_Title}" WindowStartupLocation="CenterOwner" Icon="/WinHue3;component/Resources/gear_in.png" Width="550" Height="430" MinHeight="430" MinWidth="550" >
    <Window.Resources>
        <applicationSettings:CustomAccentEnabler x:Key="isEnabledConverter"/>
        <converters:IntToUshortConverter x:Key="IntToUshortConverter"/>
        <Style TargetType="xctk:ByteUpDown" x:Key="BriLastState">
            <Setter Property="IsEnabled" Value="True"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=ChbLastState, Path=IsChecked}" Value="True">
                    <Setter Property="IsEnabled" Value="False"></Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource theme_SecondaryBackground}"/>
    </Window.Background>
    <Window.DataContext>
        <applicationSettings:AppSettingsViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Grid.Row="1" Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_ApplyButton}" x:Name="BtnApply" HorizontalAlignment="Right" Width="73" Click="btnApply_Click" Margin="10,10,0,10" TextOptions.TextFormattingMode="Display" Style="{DynamicResource ButtonStyle}"/>
        <Button Grid.Column="1" Grid.Row="1" Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_CancelButton}" x:Name="BtnCancel" HorizontalAlignment="Right" Click="btnCancel_Click" Width="73" Margin="10" Height="20" TextOptions.TextFormattingMode="Display" Style="{DynamicResource ButtonStyle}"/>
        <TabControl Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" x:Name="TcSettings" Padding="10,5,10,0" Margin="10,10,10,0" TextOptions.TextFormattingMode="Display" Style="{DynamicResource TabControlStyle}" BorderThickness="1">
            <TabControl.BorderBrush>
                <SolidColorBrush Color="{DynamicResource accent}"/>
            </TabControl.BorderBrush>
            <TabItem Header="General" Style="{DynamicResource TabItemStyle}">
                <Grid Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="Application" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left" TextOptions.TextFormattingMode="Display" Padding="0,5,5,5" Margin="0">
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </Label.Foreground>
                    </Label>
                    <Label Grid.Column="0" Grid.Row="1" Content="Language" HorizontalAlignment="Left" TextOptions.TextFormattingMode="Display" Padding="0,5,5,5">
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </Label.Foreground>
                    </Label>
                    <Label Grid.Column="0" Grid.Row="2" Content="On Startup" HorizontalAlignment="Left" TextOptions.TextFormattingMode="Display" Padding="0,5,5,5">
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </Label.Foreground>
                    </Label>
                    <StackPanel Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Margin="0,5,0,0">
                        <CheckBox x:Name="ChbDetectProxy" Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Network_DetectProxy}" ToolTip="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Network_DetectProxy_ToolTip}" IsChecked="{Binding MainSettingsModel.DetectProxy}" TextOptions.TextFormattingMode="Display" Margin="0,0,0,3" Style="{DynamicResource CheckBoxStyle}">
                            <CheckBox.Foreground>
                                <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                            </CheckBox.Foreground>
                        </CheckBox>
                        <CheckBox x:Name="ChbDebug" Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Debug_EnableDebug}" ToolTip="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Debug_EnableDebug_ToolTip}" IsChecked="{Binding MainSettingsModel.Debug}" TextOptions.TextFormattingMode="Display" Margin="0,0,0,3" Style="{DynamicResource CheckBoxStyle}">
                            <CheckBox.Foreground>
                                <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                            </CheckBox.Foreground>
                        </CheckBox>
                        <CheckBox Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Check_Update}" IsChecked="{Binding MainSettingsModel.CheckUpdate}" TextOptions.TextFormattingMode="Display" Margin="0,0,0,3" Style="{DynamicResource CheckBoxStyle}">
                            <CheckBox.Foreground>
                                <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                            </CheckBox.Foreground>
                        </CheckBox>
                        <CheckBox Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_MinimizeToTray}" IsChecked="{Binding MainSettingsModel.MinimizeToTray}" TextOptions.TextFormattingMode="Display" Margin="0,0,0,3" Style="{DynamicResource CheckBoxStyle}">
                            <CheckBox.Foreground>
                                <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                            </CheckBox.Foreground>
                        </CheckBox>
                    </StackPanel>
                    <Label Grid.Column="0" Grid.Row="6" x:Name="Lblupnp" Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Network_UpnpTimeout}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="97" Padding="0,5,5,5" TextOptions.TextFormattingMode="Display">
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </Label.Foreground>
                    </Label>
                    <xctk:IntegerUpDown Grid.Row="6" Grid.Column="1" x:Name="NudUpnpTimeout" HorizontalAlignment="Right" VerticalAlignment="Top" Width="94" Maximum="59" Minimum="1" ToolTip="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Network_UpnpTimeout_ToolTip}" Value="{Binding MainSettingsModel.UpnpTimeout}" TextOptions.TextFormattingMode="Display" Margin="0,2.5,0,0" Style="{DynamicResource IntegerUpDownStyle}"/>
                    <Label Grid.Column="0" Grid.Row="5"  x:Name="Lbltimeout" Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Network_Timeout}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="113" Padding="0,5,5,5" TextOptions.TextFormattingMode="Display">
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </Label.Foreground>
                    </Label>
                    <xctk:IntegerUpDown Grid.Row="5" Grid.Column="1" x:Name="NudTimeout" HorizontalAlignment="Right" VerticalAlignment="Top" Width="94" Maximum="60000" Minimum="1000" Value="{Binding MainSettingsModel.Timeout}" TextOptions.TextFormattingMode="Display" Margin="0,2.5,0,0" Style="{DynamicResource IntegerUpDownStyle}"/>
                    <ComboBox Grid.Column="1" Grid.Row="1" x:Name="CbLanguage" VerticalAlignment="Top" SelectedValuePath="Tag" SelectedValue="{Binding MainSettingsModel.Language}" TextOptions.TextFormattingMode="Display" Margin="0,2,0,0" Style="{DynamicResource ComboBoxStyle}">
                        <ComboBox.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </ComboBox.Foreground>
                        <ComboBoxItem x:Name="CbifrCa" Content="Français" Tag="fr-CA"/>
                        <ComboBoxItem x:Name="CbienUs" Content="English" Tag="en-US"/>
                    </ComboBox>
                    <ComboBox Grid.Column="1" Grid.Row="2" x:Name="ComboBox" VerticalAlignment="Top" SelectedValuePath="Tag" SelectedValue="{Binding MainSettingsModel.StartMode}" TextOptions.TextFormattingMode="Display" Margin="0,2,0,0" Style="{DynamicResource ComboBoxStyle}">
                        <ComboBoxItem Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Start_DoNotStart}" Tag="0"/>
                        <ComboBoxItem Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Start_Minimized}" Tag="1"/>
                        <ComboBoxItem Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Start_Tray}" Tag="2"/>
                        <ComboBoxItem Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Start_Normally}" Tag="3"/>
                    </ComboBox>
                    <Label Grid.Column="0" Grid.Row="4" Content="Hue" FontWeight="Bold" HorizontalAlignment="Left" TextOptions.TextFormattingMode="Display" Padding="0,5,5,5" Margin="0,15,0,0">
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </Label.Foreground>
                    </Label>
                    <StackPanel Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2">
                        <CheckBox x:Name="ChbHiddenScenes" Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Controls_HiddenScenes}" VerticalAlignment="Top" ToolTip="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Controls_HiddenScenes_ToolTip}" IsChecked="{Binding MainSettingsModel.ShowHidden}" TextOptions.TextFormattingMode="Display" Margin="0,0,0,3" Style="{DynamicResource CheckBoxStyle}" >
                            <CheckBox.Foreground>
                                <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                            </CheckBox.Foreground>
                        </CheckBox>
                        <CheckBox Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_AlwaysUsePropGrid}" IsChecked="{Binding MainSettingsModel.UsePropGrid}" TextOptions.TextFormattingMode="Display" Margin="0,0,0,3" Style="{DynamicResource CheckBoxStyle}">
                            <CheckBox.Foreground>
                                <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                            </CheckBox.Foreground>
                        </CheckBox>
                        <CheckBox IsChecked="{Binding MainSettingsModel.CheckForBridgeUpdate}" Margin="0,0,0,3" HorizontalContentAlignment="Stretch" Style="{DynamicResource CheckBoxStyle}">
                            <CheckBox.Foreground>
                                <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                            </CheckBox.Foreground>
                            <TextBlock Text="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_NoCheckBridgeVersion}" TextWrapping="Wrap" TextOptions.TextFormattingMode="Display"/>
                        </CheckBox>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="{x:Static resx:GUI.SettingsForm_Tab_Defaults}" Style="{DynamicResource TabItemStyle}">
                <Grid Margin="0,0,0,9">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Column="0" Grid.Row="0" x:Name="GroupBox2" Header="All On/Off settings" Margin="5" Style="{DynamicResource GroupBoxStyle}">
                        <GroupBox.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </GroupBox.Foreground>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <xctk:IntegerUpDown Grid.Column="1" Grid.Row="0" x:Name="NudAllOnTt" VerticalAlignment="Center" Maximum="65535" Minimum="-1" Value="{Binding DefaultModel.AllOnTt, Converter={StaticResource IntToUshortConverter }}" />
                            <xctk:IntegerUpDown Grid.Column="1" Grid.Row="1" x:Name="NudAllOffTt" VerticalAlignment="Center" Maximum="65535" Minimum="-1" Value="{Binding DefaultModel.AllOffTt, Converter={StaticResource IntToUshortConverter}}" />
                            <Label Grid.Column="0" Grid.Row="0" x:Name="Label" Content="{x:Static resx:GUI.MainForm_Tab_Home_Group_CommandsAllON }" HorizontalAlignment="Left" VerticalAlignment="Center" Width="72"/>
                            <Label Grid.Column="0" Grid.Row="1" x:Name="Label1" Content="{x:Static resx:GUI.MainForm_Tab_Home_Group_CommandsAllOFF}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="72"/>
                            <Label Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" x:Name="Label2" Content="{x:Static resx:GUI.ScheduleCreatorForm_TransitionTime_Legend}" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Column="0" Grid.Row="1" x:Name="GroupBox3" Margin="5" Header="{x:Static resx:GUI.SettingsForm_Tab_Defaults_TransitionTime}" Style="{DynamicResource GroupBoxStyle}">
                        <GroupBox.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </GroupBox.Foreground>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" x:Name="Label3" Text="{x:Static resx:GUI.SettingsForm_Tab_Defaults_DefaultTT}" TextWrapping="Wrap" VerticalAlignment="Top"/>
                            <xctk:IntegerUpDown Grid.Column="1" Grid.Row="0" x:Name="NudTt" VerticalAlignment="Top" Maximum="65535" Minimum="-1" Value="{Binding DefaultModel.DefaultTt, Converter={StaticResource IntToUshortConverter}}"/>
                            <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" x:Name="TextBlock1" Text="{x:Static resx:GUI.SettingsForm_Tab_Defaults_MinusOne}" Margin="0,20,0,0" TextWrapping="Wrap" TextAlignment="Right" VerticalAlignment="Top"/>
                        </Grid>


                    </GroupBox>
                    <GroupBox Grid.Column="1" Grid.Row="0" Margin="5" Header="{x:Static resx:GUI.SettingsForm_Tab_Defaults_Brightness}" Style="{DynamicResource GroupBoxStyle}">
                        <GroupBox.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </GroupBox.Foreground>
                        <Grid>
                            <xctk:ByteUpDown  HorizontalAlignment="Left" Margin="93,10,0,0" VerticalAlignment="Top" Width="98" Value="{Binding DefaultModel.DefaultLightBri}" Style="{StaticResource BriLastState}"/>
                            <xctk:ByteUpDown  HorizontalAlignment="Left" Margin="93,49,0,0" VerticalAlignment="Top" Width="98" Value="{Binding DefaultModel.DefaultGroupBri}" Style="{StaticResource BriLastState}"/>
                            <Label Content="{x:Static resx:GUI.SettingsForm_Tab_Defaults_Lights}" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.447,0.564" Width="78"/>
                            <Label Content="{x:Static resx:GUI.SettingsForm_Tab_Defaults_Groups}" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" Width="78"/>
                            <CheckBox x:Name="ChbLastState"  Content="{x:Static resx:GUI.SettingsForm_Tab_Defaults_LastState}" IsChecked="{Binding DefaultModel.UseLastBriState}" Width="78" Margin="10,80,110.667,9.667" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Grid.Row="1" Margin="5" Header="{x:Static resx:GUI.SettingsForm_Tab_Defaults_SliderTitle}" Style="{DynamicResource GroupBoxStyle}">
                        <ComboBox HorizontalAlignment="Left" Margin="0,22,-2.333,0" VerticalAlignment="Top" Width="285" SelectedValuePath="Tag" SelectedValue="{Binding DefaultModel.SlidersBehavior}">
                            <ComboBoxItem Content="Disabled when object is off / Only Toggle On" Tag="0"/>
                            <ComboBoxItem Content="Can changed when off / Apply at toggle On" Tag="1"/>
                        </ComboBox>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="{x:Static resx:GUI.SettingsForm_Tab_View}" Style="{DynamicResource TabItemStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ComboBox Grid.Column="1" Grid.Row="1" x:Name="CbDefaultSort" VerticalAlignment="Top" SelectedValue="{Binding ViewSettingsModel.Sort}" SelectedValuePath="Tag" Margin="0,2,0,0" TextOptions.TextFormattingMode="Display" Style="{DynamicResource ComboBoxStyle}" >
                        <ComboBoxItem Content="Default" Tag="{x:Static models:WinHueSortOrder.Default}"/>
                        <ComboBoxItem Content="Ascending" Tag="{x:Static models:WinHueSortOrder.Ascending}"/>
                        <ComboBoxItem Content="Descending" Tag="{x:Static models:WinHueSortOrder.Descending}"/>
                    </ComboBox>
                    <Label Grid.Column="0" Grid.Row="1" x:Name="LblDefaultSort" Content="{x:Static resx:GUI.SettingsForm_Tab_View_DefautSort}" HorizontalAlignment="Left" Padding="0,5,5,5" VerticalContentAlignment="Stretch" TextOptions.TextFormattingMode="Display">
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </Label.Foreground>
                    </Label>
                    <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,5,0,0">
                        <CheckBox x:Name="ChbShowId" Content="{x:Static resx:GUI.SettingsForm_Tab_View_ShowID}" Margin="0,0,0,3" IsChecked="{Binding ViewSettingsModel.ShowId}" TextOptions.TextFormattingMode="Display" Style="{DynamicResource CheckBoxStyle}">
                            <CheckBox.Foreground>
                                <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                            </CheckBox.Foreground>
                        </CheckBox>
                        <CheckBox x:Name="ChbWrapText" Content="{x:Static resx:GUI.SettingsForm_Tab_View_WrapText}" Margin="0" IsChecked="{Binding ViewSettingsModel.Wrap}" TextOptions.TextFormattingMode="Display" Style="{DynamicResource CheckBoxStyle}">
                            <CheckBox.Foreground>
                                <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                            </CheckBox.Foreground>
                        </CheckBox>
                    </StackPanel>
                    <Label Grid.Column="0" Grid.Row="0" Content="Hue Objects" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,5,5,5" FontWeight="Bold" TextOptions.TextFormattingMode="Display">
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </Label.Foreground>
                    </Label>
                </Grid>
            </TabItem>
            <TabItem Header="Appearance" Style="{DynamicResource TabItemStyle}">
                <Grid Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto" MinHeight="25.96"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="Colors and Styles" FontWeight="Bold" Padding="0,5,5,5" TextOptions.TextFormattingMode="Display">
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </Label.Foreground>
                    </Label>
                    <CheckBox x:Name="chkWindowsAccent" Grid.Column="1" Grid.Row="2" Content="Use Windows accent" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,27.96,0,0" TextOptions.TextFormattingMode="Display" Style="{DynamicResource CheckBoxStyle}" IsChecked="{Binding MainSettingsModel.UseWindowsAccent}" IsEnabled="{Binding MainSettingsModel.ModernTheme}">
                        <CheckBox.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </CheckBox.Foreground>
                    </CheckBox>
                    <Button x:Name="buttonAccent" Grid.Column="1" Grid.Row="2" Content="Custom..." Click="btnAccent_Click" HorizontalAlignment="Right" Width="73" VerticalAlignment="Top" Margin="0,3,0,0" Height="19.96" TextOptions.TextFormattingMode="Display" Style="{DynamicResource ButtonStyle}">
                        <!--<Button.IsEnabled>
                            <MultiBinding Converter="{StaticResource isEnabledConverter}">
                                <Binding ElementName="chkWindowsAccent" Path="IsChecked"/>
                                <Binding ElementName="cbThemeLayout" Path="SelectedItem"/>
                            </MultiBinding>
                        </Button.IsEnabled>-->
                    </Button>
                    <Label Grid.Column="0" Grid.Row="1" Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Theme}" Padding="0,5,5,5" TextOptions.TextFormattingMode="Display">
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </Label.Foreground>
                    </Label>
                    <Label Grid.Column="0" Grid.Row="2" Content="Accent Color" Padding="0,5,5,5" TextOptions.TextFormattingMode="Display">
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </Label.Foreground>
                    </Label>
                    <Label Grid.Column="0" Grid.Row="4" Content="{x:Static resx:GUI.SettingsForm_Tab_MainSettings_Layout}" Padding="0,5,5,5" TextOptions.TextFormattingMode="Display">
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </Label.Foreground>
                    </Label>
                    <Label Grid.Column="0" Grid.Row="3" Content="Layout" FontWeight="Bold" Padding="0,5,5,5" TextOptions.TextFormattingMode="Display">
                        <Label.Foreground>
                            <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
                        </Label.Foreground>
                    </Label>
                    <controls:CommandComboBox Grid.Column="1" Grid.Row="1" x:Name="cbTheme" SelectedValuePath="Content" SelectedValue="{Binding MainSettingsModel.Theme}" Style="{DynamicResource ComboBoxStyle}" Command="{Binding ChangeThemeCommand}" Margin="0,2,0,0" TextOptions.TextFormattingMode="Display" VerticalAlignment="Top">
                        <ComboBoxItem Content="Light"/>
                        <ComboBoxItem Content="Dark"/>
                    </controls:CommandComboBox>
                    <controls:CommandComboBox Grid.Column="1" Grid.Row="4" x:Name="cbThemeLayout" SelectedValuePath="Content" SelectedValue="{Binding MainSettingsModel.ThemeLayout}" VerticalAlignment="Top" Margin="0,2,0,0" TextOptions.TextFormattingMode="Display" Style="{DynamicResource ComboBoxStyle}" SelectionChanged="cbThemeLayout_SelectionChanged">
                        <ComboBoxItem Content="Legacy"/>
                        <ComboBoxItem Content="Modern"/>
                    </controls:CommandComboBox>
                    <Label Grid.Column="0" Grid.Row="4" Content="This feature may not work as intended." HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFD30000" Margin="0,25.96,0,0" Padding="0,0,5,5" TextOptions.TextFormattingMode="Display"/>
                </Grid>
            </TabItem>


        </TabControl>

    </Grid>
</Window>
