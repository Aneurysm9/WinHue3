<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinHue3.Functions.Schedules.NewCreator.Controls"
             xmlns:Converters="clr-namespace:WinHue3.Functions.Converters" xmlns:Resources="clr-namespace:WinHue3.Resources" x:Class="WinHue3.Functions.Schedules.NewCreator.Controls.Sliders"
             mc:Ignorable="d" Width="656" Height="269">
    <UserControl.Resources>
        <Converters:DoubleToUShortConverter x:Key="SliderToUshortConverter"/>
        <Converters:DoubleToByteConverter x:Key="SliderToByteConverter"/>
        <Converters:HueColorConverter x:Key="HueColorConverter"/>
        <Converters:SliderToXYConverter x:Key="SliderToXyConverter"/>
    </UserControl.Resources>
    <Grid Margin="0,0,0,0" Height="269" VerticalAlignment="Top">

        <Label Content="{x:Static Resources:GUI.ScheduleCreatorForm_Hue}" HorizontalAlignment="Left" Margin="10,0,0,0" Width="102" Height="25" VerticalAlignment="Top"/>
        <Slider x:Name="slHue" Height="217" VerticalAlignment="Top" Maximum="65535" Margin="33,31,0,0" Width="21" IsSnapToTickEnabled="True" Orientation="Vertical" SmallChange="1" SnapsToDevicePixels="True" Minimum="-1" ToolTip="{Binding Value, ElementName=slHue}" IsMoveToPointEnabled="True" HorizontalAlignment="Left">
            <Slider.Background>
                <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0" >
                    <GradientStop Color="#FFFF0000" />
                    <GradientStop Color="#FEFFFF00" Offset="0.167" />
                    <GradientStop Color="#FE00FF00" Offset="0.333" />
                    <GradientStop Color="#FE00FFFF" Offset="0.5" />
                    <GradientStop Color="#FE0000FF" Offset="0.667" />
                    <GradientStop Color="#FEFF00FF" Offset="0.833" />
                    <GradientStop Color="#FFFF0000" Offset="1.0" />
                </LinearGradientBrush>
            </Slider.Background>
            <Slider.Style>
                <Style/>
            </Slider.Style>
        </Slider>
        <Label Content="{x:Static Resources:GUI.ScheduleCreatorForm_Brightness}" HorizontalAlignment="Left" Margin="117,0,0,0" Width="96" Height="25" VerticalAlignment="Top"/>
        <Slider x:Name="slBri"  Height="217" VerticalAlignment="Top" Maximum="254" Margin="140,31,0,0" Width="22" IsSnapToTickEnabled="True" SmallChange="1" Orientation="Vertical" Minimum="-1" IsMoveToPointEnabled="True" HorizontalAlignment="Left">
            <Slider.Background>
                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="Black" Offset="0"/>
                </LinearGradientBrush>
            </Slider.Background>
        </Slider>
        <Label Content="{x:Static Resources:GUI.ScheduleCreatorForm_ColorTemp}" HorizontalAlignment="Left"  Width="101" Margin="218,0,0,0" Height="25" VerticalAlignment="Top"/>
        <Slider x:Name="slCT"  Height="217" VerticalAlignment="Top" Maximum="500" Margin="249,31,0,0" Width="21" Minimum="152" IsSnapToTickEnabled="True" SmallChange="1" Orientation="Vertical" IsMoveToPointEnabled="True" HorizontalAlignment="Left">
            <Slider.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFF8912" Offset="0"/>
                    <GradientStop Color="#FFFFF9FD" Offset="1"/>
                </LinearGradientBrush>
            </Slider.Background>
        </Slider>
        <Label Content="{x:Static Resources:GUI.ScheduleCreatorForm_Saturation}" HorizontalAlignment="Left" Margin="339,0,0,0" Width="93" Height="25" VerticalAlignment="Top"/>
        <Slider x:Name="slSAT" Value="{Binding Body.sat, Converter={StaticResource SliderToByteConverter}}"  Height="217" VerticalAlignment="Top" Maximum="254" Minimum="-1" Margin="361,31,0,0" IsSnapToTickEnabled="True" SmallChange="1" Orientation="Vertical" IsMoveToPointEnabled="True" HorizontalAlignment="Left" Width="22">
            <Slider.Background>
                <LinearGradientBrush  EndPoint="0.5,0" StartPoint="0.5,1">
                    <GradientStop Color="White" x:Name="slSATStartGradient"/>
                    <GradientStop Color="{Binding Value, Converter={StaticResource HueColorConverter}, ElementName=slHue}" Offset="1" x:Name="slSATEndGradient"/>
                </LinearGradientBrush>
            </Slider.Background>
        </Slider>
        <Label Content="{x:Static Resources:GUI.ScheduleCreatorForm_XColorSpace}" HorizontalAlignment="Left" Margin="447,0,0,0" Width="90" RenderTransformOrigin="0.507,0" Height="25" VerticalAlignment="Top"/>
        <Slider x:Name="slX" Value="{Binding Body.xy.X, Converter={StaticResource SliderToXyConverter}}" Maximum="1" Margin="479,31,0,0" IsSnapToTickEnabled="True" TickFrequency="0.001" SmallChange="0.001" Orientation="Vertical" Minimum="-0.001" IsMoveToPointEnabled="True" Height="216" VerticalAlignment="Top" HorizontalAlignment="Left" Width="27" />
        <Label Content="{x:Static Resources:GUI.ScheduleCreatorForm_YColorSpace}" Margin="557,0,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="88"/>
        <Slider x:Name="slY" Value="{Binding Body.xy.Y, Converter={StaticResource SliderToXyConverter}}" Maximum="1" Margin="589,31,0,0" IsSnapToTickEnabled="True" TickFrequency="0.001" SmallChange="0.001" Orientation="Vertical" Minimum="-0.001" IsMoveToPointEnabled="True" Height="216" VerticalAlignment="Top" HorizontalAlignment="Left" Width="24"/>

    </Grid>
</UserControl>
