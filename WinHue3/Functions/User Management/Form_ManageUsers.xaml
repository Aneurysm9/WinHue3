<Window
    xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinHue3"
        xmlns:resx="clr-namespace:WinHue3.Resources"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:userManagement="clr-namespace:WinHue3.Functions.User_Management"
    x:Class="WinHue3.Functions.User_Management.Form_ManageUsers"
        mc:Ignorable="d"
        Title="{x:Static resx:GUI.ManageUsers_Title}" Height="350" Width="650" Icon="/WinHue3;component/Resources/user.png" WindowStartupLocation="CenterOwner" BorderBrush="{Binding RelativeSource={RelativeSource Self}, Path=WindowTitleBrush}" MinWidth="650" MinHeight="350">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource theme_MainBackground}"/>
    </Window.Background>

    <Window.DataContext>
        <userManagement:ManageUsersViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="ListBox" DisplayMemberPath="Name" SelectedItem="{Binding SelectedUser}" Grid.RowSpan="7" ItemContainerStyle="{DynamicResource ListBoxItemStyle}" ItemsSource="{Binding ListUsers}">
            <ListBox.Foreground>
                <SolidColorBrush Color="{DynamicResource theme_ControlText}"/>
            </ListBox.Foreground>
            <ListBox.BorderBrush>
                <SolidColorBrush Color="{DynamicResource accent}"/>
            </ListBox.BorderBrush>
            <ListBox.Background>
                <SolidColorBrush Color="{DynamicResource theme_SecondaryBackground}"/>
            </ListBox.Background>
        </ListBox>

        <xctk:WatermarkTextBox x:Name="WatermarkTextBox" TextWrapping="Wrap" Text="{Binding UsersModel.Devtype}" VerticalAlignment="Top" Watermark="{x:Static resx:GUI.ManageUsers_DeviceType}" MaxLength="19" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Margin="0,10" Style="{DynamicResource WatermarkTextBoxStyle}"/>
        <xctk:WatermarkTextBox x:Name="WatermarkTextBox1" TextWrapping="Wrap" Text="{Binding UsersModel.ApplicationName}" Watermark="{x:Static resx:GUI.ManageUsers_Username}" MaxLength="20" Grid.Column="2" VerticalAlignment="Top" Grid.ColumnSpan="2" Style="{DynamicResource WatermarkTextBoxStyle}" />
        <Label x:Name="LblLastUsed" Content="{x:Static resx:GUI.ManageUsers_LastUsed}" VerticalAlignment="Top" Grid.Row="2" Grid.Column="2" FontWeight="Bold">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource theme_MainText}"/>
            </Label.Foreground>
        </Label>
        <Label x:Name="LblCreate" Content="{x:Static resx:GUI.ManageUsers_CreateDate}" VerticalAlignment="Top" Grid.Row="3" Grid.Column="2" FontWeight="Bold">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource theme_MainText}"/>
            </Label.Foreground>
        </Label>
        <Label x:Name="LblLastUsedDate" Content="{Binding UsersModel.Lastused}" Grid.Row="2" Grid.Column="3" Background="{x:Null}">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource theme_MainText}"/>
            </Label.Foreground>
        </Label>
        <Label x:Name="LblCreateDate" Content="{Binding UsersModel.Created}" Grid.Row="3" Grid.Column="3" Background="{x:Null}">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource theme_MainText}"/>
            </Label.Foreground>
        </Label>
        <TextBox x:Name="TbKey" TextWrapping="Wrap" Text="{Binding UsersModel.Key}" BorderThickness="0" IsReadOnly="True" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2" Background="{x:Null}" Style="{DynamicResource TextBoxStyle}" Padding="5,5,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Label" Content="{x:Static resx:GUI.ManageUsers_Key}" VerticalAlignment="Top" Grid.Row="4" Grid.Column="2" FontWeight="Bold">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource theme_MainText}"/>
            </Label.Foreground>
        </Label>
        <StackPanel VerticalAlignment="Top" Grid.Column="2" Grid.Row="6" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Left">
            <Button x:Name="BtnDelete" Content="{x:Static resx:GUI.ManageUsers_Delete}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="73" Foreground="Red" Command="{Binding DeleteCommand}" Height="21" Style="{DynamicResource ButtonStyle}"/>
            <Button x:Name="BtnClear" Content="{x:Static resx:GUI.ManageUsers_Clear}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="73" Command="{Binding ClearCommand}" Margin="10,0,0,0" Height="21" Style="{DynamicResource ButtonStyle}"/>
            <Button x:Name="BtnAddUser" Content="{x:Static resx:GUI.ManageUsers_AddUser}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="107" Command="{Binding AddUserCommand}" Margin="10,0,0,0" Height="21" Style="{DynamicResource ButtonStyle}"/>
        </StackPanel>
        <Button x:Name="BtnDone" Content="{x:Static resx:GUI.ManageUsers_Done}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="73" Click="btnDone_Click" Grid.Column="3" Grid.Row="6" Height="21" Style="{DynamicResource ButtonStyle}"/>

    </Grid>
</Window>
